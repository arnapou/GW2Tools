{% else %}

    <div class="alert alert-warning">
        <p>
            <i class="glyphicon glyphicon-exclamation-sign"></i> <b>Imposible to request data.</b> 
        </p>
        <p>
            The api key used has not the &quot;<b>{{ permission }}</b>&quot; permission.
        </p>
    </div>

{% endif %}