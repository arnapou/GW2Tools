
{% import "macro.twig" as macro %}

{% if account.token %}

	{% set banks = apiclient.bank %}
	{% set nb = (banks|length/2)|round(0, 'ceil') %}
	{% set columns = banks|chunk(nb) %}
	
	{% for row in 0..(nb-1) %}
		<div class="row">
			{% for col in 0..1 %}
				<div class="col-xs-6">
					{% set bank = columns[col][row + col * nb] %}
					{% if bank %}
						<div class="panel panel-default">
							<div class="panel-heading">
								<div class="pull-right">
									{{ macro.amount(bank.sum_min) }} &#8210; {{ macro.amount(bank.sum_max) }}
								</div>
								Bank {{ col * nb + row + 1 }}
							</div>
							<div class="panel-body slots">
								{% for item in bank.slots %}
									<div class="slot">
										{% if item.id %}
											<a href="http://db.dulfy.net/item/{{ item.id }}" target="_blank" title="{{ item.price.title }}">
												<img src="{{ item.icon }}" />
												{% if item.count > 1 %}
													<span class="count">{{ item.count }}</span>
												{% endif %}
											</a>
										{% endif %}
									</div>
								{% endfor %}
							</div>
						</div>
					{% endif %}
				</div>
			{% endfor %}
		</div>
	{% endfor %}

{% else %}

	{% include "not-owner-message.twig" %}

{% endif %}