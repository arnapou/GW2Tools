
{% import "AppBundle::macro.html.twig" as macro %}

<div class="gwitem">

    <div class="gwitemheader">
        <div class="gwicon">
            <img title="{{ skin.getname }}" src="{{ skin|image }}" />
        </div>

        <div class="gwname">
            {{ skin.getname }}
        </div>
    </div>

    <div>
        {{ ('itemtype.'~skin.gettype)|trans }}
    </div>

    {% if skin.gettype in ['Armor', 'Weapon'] %}

        <div>
            {{ ('itemtype.'~skin.getsubtype)|trans }}
        </div>

    {% endif %}

    {% if skin.getarmorweightclass %}

        <div>
            {{ ('weight.'~skin.getarmorweightclass)|trans }}
        </div>

    {% endif %}

    <div>
        {{ 'global.appearance'|trans }}
    </div>

    <div class="gwclickinfo">
        <span class="lock">{{ 'tooltip.click_lock'|trans }}</span>
        <span class="unlock">{{ 'tooltip.click_unlock'|trans }}</span>
    </div>
</div>
